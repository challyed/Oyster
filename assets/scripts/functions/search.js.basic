// set up typeahead.js
// This is a basic setup that does only the selected neighborhood.

function initTypeahead(msg, data) {
    var polyid = _.map(data.geom.objects[neighborhoods].geometries, function(d){ return d.id.toString(); });
    $("#searchbox").click(function () { $(this).select(); }).focus();
    $('.typeahead').typeahead([
        {
            name: neighborhoodDescriptor,
            local: polyid,
            header: '<h4 class="typeahead-header"><span class="glyphicon glyphicon-home"></span> ' + neighborhoodDescriptor + '</h4>'
        }
    ]).on('typeahead:selected', function (obj, datum) {
        // select neighborhood
        geocode({"id": parseInt(datum.value)});
        d3Select(parseInt(datum.value));
    });
}
